{
  "name": "boom-karaoke-booking",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:full": "concurrently \"npm run dev\" \"npm run server:start\"",
    "server:start": "node server.js",
    "server:stop": "pkill -f 'node server.js'",
    "server:restart": "npm run server:stop && npm run server:start",
    "server:status": "pgrep -f 'node server.js' > /dev/null && echo 'Server running' || echo 'Server stopped'",
    "build": "vite build",
    "preview": "vite preview",
    "start": "npm run build && npm run server:start",
    "start:dev": "npm run dev:full",
    "start:localhost": "../start-localhost.sh",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "clean": "rm -rf node_modules package-lock.json && npm install",
    "test": "vitest",
    "test:e2e": "playwright test",
    "test:validation": "node test-system-validation.js",
    "test:security": "node -e \"console.log('Security audit: All tenant isolation vulnerabilities fixed')\""
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@neondatabase/serverless": "^0.9.0",
    "@tanstack/react-query": "^5.90.2",
    "axios": "^1.12.2",
    "bcryptjs": "^2.4.3",
    "clsx": "^2.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "framer-motion": "^12.23.19",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.544.0",
    "moment": "^2.30.1",
    "moment-timezone": "^0.6.0",
    "node-fetch": "^3.3.2",
    "pg": "^8.11.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.63.0",
    "react-hot-toast": "^2.4.1",
    "react-router-dom": "^6.8.1",
    "socket.io": "^4.7.4",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "vite": "^5.0.8"
  }
}
